---
const personalImageAlt = "Alex Esparza"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/alex.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/alejandro-esparza-gonzalez/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>let's work together</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hello there, I'm Alex!
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-[#FF331F]  [&>strong]:text-[#FF331F] [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong
      >Web developer</strong
    > with 4 years of experience working on the creation of web applications.
    Located in Kyoto, Japan.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:alex.e.g.107@gmail.com">
      <MailIcon class="size-4" />
      Contact me
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/alejandro-esparza-gonzalez/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
